{
  "name": "core-banking-demo",
  "version": "1.0.0",
  "description": "Core Banking in a Box for MuleSoft Demos",
  "main": "backend/app.js",
  "scripts": {
    "start": "node backend/app.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon backend/app.js",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build && cd .. && npm run build:backend",
    "build:backend": "echo 'Backend build complete'",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "jest backend/**/*.test.js",
    "test:frontend": "cd frontend && npm run test",
    "docker:build": "docker build -t core-banking-demo .",
    "docker:run": "docker run -p 3000:3000 -p 3001:3001 core-banking-demo",
    "init:db": "node data/init-db.js",
    "seed:data": "node data/seed-demo-data.js",
    "docs:generate": "swagger-jsdoc -d docs/swagger.config.js backend/controllers/*.js -o docs/api-spec.json",
    "health-check": "curl -f http://localhost:3001/health",
    "api-tests": "jest backend/**/*.test.js",
    "integration-tests": "jest integration/**/*.test.js",
    "load-tests": "npx artillery quick --count 10 --num 100 http://localhost:3001/api/v1/customers"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "node-cache": "^5.1.2",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "uuid": "^9.0.0",
    "decimal.js": "^10.4.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "winston": "^3.10.0",
    "express-rate-limit": "^6.8.1",
    "multer": "^1.4.4",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "artillery": "^2.0.0"
  }
}